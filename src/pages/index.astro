---
import { ExternalLinks } from "../components/ExternalLinks";
import Layout from "../layouts/Layout.astro";
import { Image } from "@astrojs/image/components";

type Project = {
  title: string;
  imageUrl: any;
};

const projects: Project[] = [
  {
    title: "Project 1",
    imageUrl:
      "https://images.pexels.com/photos/546819/pexels-photo-546819.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
  {
    title: "Project 2",
    imageUrl:
      "https://images.pexels.com/photos/207580/pexels-photo-207580.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
  {
    title: "Project 3",
    imageUrl:
      "https://images.pexels.com/photos/3861969/pexels-photo-3861969.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2",
  },
];
---

<Layout title="Welcome to guidooffermans.dev">
  <main class="relative">
    <div class="flex min-h-screen flex-col justify-between p-3 md:p-8">
      <div class="flex flex-col md:flex-row md:justify-between">
        <div class="w-[80%] md:w-[60%]">
          <h1 class="text-3xl">
            Hello I'm Guido Offermans a Full Stack Developer. From Psychology to
            code-lover. I am a tranquil minded yet enthusiastic developer, eager
            to learn and dedicated to deliver the best experience.
          </h1>
        </div>
        <div class="flex flex-col w-[80%] md:w-64 mt-32 md:mt-0 justify-end">
          <p>Developer focussed on building modern full stack apps</p>
        </div>
      </div>
      <div class="w-[80%]">Based in ZÃ¼rich</div>
    </div>

    <div class="flex flex-col md:p-0 md:gap-px mt-32 bg-black">
      <h2 class="flex w-full bg-white p-3 md:p-8 text-lg">Projects</h2>
      <div class="flex flex-col md:gap-px">
        {
          projects.map((project: Project, index) => {
            return (
              <div class="flex flex-col md:flex-row md:h-40 w-full bg-white p-3 md:p-8 gap-2 md:hover:bg-slate-200">
                <p class="hidden md:block p-2">/0{index + 1}</p>
                <h3 class="md:text-8xl">{project?.title}</h3>
                <Image
                  class="aspect-square md:hidden items-center"
                  src={project?.imageUrl}
                  alt={project?.title}
                  width={780}
                  aspectRatio="1:1"
                  format="webp"
                />
              </div>
            );
          })
        }
        <div class="flex md:h-40 w-full bg-white p-3 md:p-8">
          <a href="/work" class="text-xl">See more work ({projects?.length})</a>
        </div>
      </div>
    </div>

    <footer class="flex flex-col mt-16 p-3 border-t gap-20">
      <div class="py-3 flex flex-col gap-8">
        <h4 class="text-2xl">LETS MAKE SOMETHING GREAT!</h4>
        <div>
          <p>
            <span class="opacity-80">EMAIL</span><br />hello@guidooffermans.com
          </p>
        </div>
      </div>
      <div class="flex">
        <p class="hidden md:block">Developed by Guido Offermans</p>
        <nav class="flex border-t border-t-white w-full gap-4 pt-3">
          <ExternalLinks />
        </nav>
      </div>
    </footer>
  </main>
</Layout>
